    "build-ts": "tsc -p .",
    "start": "npm run build && node $NODE_DEBUG_OPTION server.js",
    "run": "node $NODE_DEBUG_OPTION runner.js",
    "test": "NODE_ENV=test knex migrate:latest && NODE_ENV=test mocha",
    "e2e": "node e2e-test/e2e.js",
    "nyc": "NODE_ENV=test knex migrate:latest && NODE_ENV=test nyc mocha",
    "nyc-report": "NODE_ENV=test knex migrate:latest && NODE_ENV=test nyc --reporter=html mocha"
  },
  "author": "Ihor Banadiga",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LvivNodeJsClub/user-service.git"
  },
  "keywords": [
    "user",
    "node"
  ],
  "bugs": {
    "url": "https://github.com/LvivNodeJsClub/user-service/issues"
  },
  "homepage": "https://github.com/LvivNodeJsClub/user-service#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "email-validator": "^2.0.4",
    "express": "^4.16.3",
    "joi": "^13.6.0",
    "knex": "^0.15.2",
    "passport": "^0.4.0",
    "pg": "^7.4.3",
    "require": "^2.4.20",
    "rootpath": "^0.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/joi": "^13.6.0",
    "@types/knex": "^0.14.26",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "http-status-codes": "^1.3.0",
    "mocha": "^5.2.0",
    "newman": "^4.1.0",
    "newman-reporter-html": "^1.0.2",
    "nyc": "^13.0.1",
    "sinon": "^6.1.5",
    "supertest": "^3.1.0",
    "typescript": "^3.1.1"
  },
  "nyc": {
    "report-dir": "./output/nyc-report"
  }
